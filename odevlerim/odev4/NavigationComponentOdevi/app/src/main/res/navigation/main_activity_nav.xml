    <fragment
        android:id="@+id/sayfaXFragment"
        android:name="com.ahmetsudeys.navigationcomponentodevi.SayfaXFragment"
        android:label="fragment_sayfa_x"
        tools:layout="@layout/fragment_sayfa_x" >
        <action
            android:id="@+id/XdenYyeGecis"
